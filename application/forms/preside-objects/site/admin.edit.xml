<?xml version="1.0" encoding="UTF-8"?>
<!--#!autodoc
Site: edit form

This form is used for the "edit site" form in the site manager
-->
<form>
	<tab id="seo" sortorder="20" title="preside-objects.site:seo.tab.title">
        <fieldset id="seo" sortorder="10">
			<field binding="site.description" control="textArea" sortorder="50" />
		</fieldset>
	</tab>
   <tab id="footer" title="preside-objects.site:footer.tab.title">
        <fieldset id="footer">
            <field binding="site.footer_links_1"    control="objectPicker"   object="footer_links" multiple="true" quickadd="true" quickedit="true" sortable="true"/>
            <field binding="site.footer_links_2"    control="objectPicker"   object="footer_links" multiple="true" quickadd="true" quickedit="true" sortable="true"/>
            <field binding="site.social_links"      control="objectPicker"   object="social_links" multiple="true" quickadd="true" quickedit="true" sortable="true"/>
            <field binding="site.footer_content_1"  control="richEditor" />
            <field binding="site.footer_content_2"  control="richEditor" />
        </fieldset>
    </tab>
      <tab id="header" title="preside-objects.site:header.tab.title">
        <fieldset id="header">
            <field binding="site.header_content"            control="objectPicker"   object="info_icon" multiple="true" quickadd="true" quickedit="true" sortable="true"/>
            <field binding="site.header_links"              control="linkPicker"     multiple="true" quickadd="true" quickedit="true" sortable="true"/>
            <field binding="site.header_social_links"       control="objectPicker"   object="social_links" multiple="true" quickadd="true" quickedit="true" sortable="true"/>
        </fieldset>
    </tab>
</form>